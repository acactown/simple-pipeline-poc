# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts (bash/zsh)
[*.sh]
indent_style = space
indent_size = 4

# JSON configuration files
[*.json]
indent_style = space
indent_size = 2

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML configuration files (if any are added in future)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

# Git files
[.gitignore]
indent_style = space
indent_size = 2

# GitHub workflow files
[.github/**/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# HTML/CSS/JS files (for any UI components)
[*.{html,css,js}]
indent_style = space
indent_size = 2

# Python files (for any Python scripts)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# XML files
[*.xml]
indent_style = space
indent_size = 2
